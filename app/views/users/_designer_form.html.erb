<%= user_form.fields_for :designer_profile, :html => { :class => 'well' } do |f| %>
  <fieldset>    
    <div class="control-group <%= add_error_class(@user, :designer_profile, :dribble_profile) %>">
      <%= f.label :dribble_profile, "Dribbble profile", :class => 'control-label' %>

    <div class="controls">
      <div class="input-prepend">
        <span class="add-on">dribbble.com/</span><%= f.text_field :dribble_profile, :class => 'span2' %>
      </div>
      <%= add_error_message(@user, :designer_profile, :dribble_profile) %>
    </div>

    </div>


    <div class="control-group <%= add_error_class(@user, :designer_profile, :behance_profile) %>">
      <%= f.label :behance_profile, :class => 'control-label' %>

    <div class="controls">
      <div class="input-prepend">
        <span class="add-on">behance.net/</span><%= f.text_field :behance_profile, :class => 'span2' %>
      </div>
      <%= add_error_message(@user, :designer_profile, :behance_profile) %>
    </div>

    </div>

  </fieldset>
<% end %>
